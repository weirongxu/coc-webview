{
  "name": "coc-webview",
  "version": "0.8.0",
  "description": "Vscode webview ported to coc.nvim",
  "author": "Weirong Xu <weirongxu.raidou@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:weirongxu/coc-webview.git",
  "homepage": "https://github.com/weirongxu/coc-webview",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "coc.nvim",
    "webview",
    "webview-panel"
  ],
  "engines": {
    "coc": "^0.0.80"
  },
  "scripts": {
    "lint": "eslint src --ext ts",
    "clean": "rimraf lib",
    "watch": "node esbuild.js --watch",
    "build:type": "tsc --emitDeclarationOnly",
    "build:pack": "node esbuild.js",
    "build": "run-s build:type lint build:pack",
    "prepare": "run-s clean build"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "semi": true
  },
  "devDependencies": {
    "@types/eslint": "^7.28.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^16.9.1",
    "@types/prettier": "^2.3.2",
    "@types/rimraf": "^3.0.2",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "coc-helper": "^0.12.0",
    "coc.nvim": "^0.0.81-next.6",
    "esbuild": "^0.12.28",
    "esbuild-plugin-alias": "^0.1.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mime-types": "^2.1.32",
    "npm-run-all": "^4.1.5",
    "open": "^8.2.1",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.2",
    "socket.io": "^4.2.0",
    "socket.io-client": "^4.2.0",
    "type-fest": "^2.3.2",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Markdown Preview Enhanced",
      "properties": {
        "webview.debug": {
          "description": "Enable debug mode",
          "type": "boolean",
          "default": false
        },
        "webview.colorStrategy": {
          "description": "Color strategy for webview",
          "enum": [
            "vim-background",
            "system",
            "dark",
            "light"
          ],
          "enumDescriptions": [
            "Depending on Vim background option",
            "Depending on Operating System",
            "Dark",
            "Light"
          ],
          "default": "vim-background"
        },
        "webview.primaryColors": {
          "description": "Primary colors for webview",
          "type": "object",
          "properties": {
            "dark": {
              "type": "string"
            },
            "light": {
              "type": "string"
            }
          },
          "required": [
            "dark",
            "light"
          ],
          "default": {
            "dark": "#242424",
            "light": "#2288ff"
          }
        },
        "webview.host": {
          "description": "Listen host for webview service",
          "type": "string",
          "default": "localhost"
        },
        "webview.minPort": {
          "description": "Mix port for webview service",
          "type": "number",
          "default": "15567"
        },
        "webview.maxPort": {
          "description": "Max port for webview service",
          "type": "number",
          "default": "15667"
        },
        "webview.openCommand": {
          "description": "Command template for open webview, arguments(%u webview url), example: 'chrome \"%u\"'",
          "anyOf": [
            {
              "enum": [
                "nodejs:module",
                "chrome \"%u\"",
                "firefox \"%u\"",
                "open -a \"Google Chrome\" \"%u\"",
                "open -a Firefox \"%u\"",
                "open -a Safari \"%u\""
              ],
              "enumDescriptions": [
                "Use nodejs module"
              ]
            },
            {
              "description": "Use template string as trash command",
              "type": "string"
            }
          ],
          "default": "nodejs:module"
        }
      }
    }
  }
}
